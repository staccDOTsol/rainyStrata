{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["dom", "es2019"],
    "types": ["jest", "node"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "typings/browser", "typings/browser.d.ts", "src/**/*.test.ts"],
  "atom": {
    "rewriteTsconfig": false
  }
}
